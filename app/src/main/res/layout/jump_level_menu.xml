<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/level_background"
        android:scaleType="centerCrop"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="20dp">

        <Button
            android:layout_row="0"
            android:layout_column="0"
            android:background="#00FF7F"
            android:layout_margin="10dp"
            android:id="@+id/level_one_btn"
            android:text="Level 1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:onClick="startLevelOne"
           />

        <Button
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/red_color"
            android:layout_margin="10dp"
            android:id="@+id/level_two_btn"
            android:text="Level 2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:onClick="startLevelTwo"
            android:enabled="false"
            />

        <Button
            android:layout_row="0"
            android:layout_column="2"
            android:background="@color/red_color"
            android:layout_margin="10dp"
            android:id="@+id/level_three_btn"
            android:text="Level 3"
            android:textStyle="bold"
            android:textSize="18sp"
            android:onClick="startLevelThree"
            android:enabled="false"/>

        <Button
            android:layout_row="1"
            android:layout_column="0"
            android:background="@color/red_color"
            android:layout_margin="10dp"
            android:id="@+id/level_four_btn"
            android:text="Level 4"
            android:textStyle="bold"
            android:textSize="18sp"
            android:onClick="startLevelFour"
            android:enabled="false"/>

        <Button
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/red_color"
            android:layout_margin="10dp"
            android:id="@+id/level_five_btn"
            android:text="Level 5"
            android:textStyle="bold"
            android:textSize="18sp"
            android:onClick="startLevelFive"
            android:enabled="false"/>
        <Button
            android:layout_row="1"
            android:layout_column="2"
            android:background="@color/red_color"
            android:layout_margin="10dp"
            android:id="@+id/level_six_btn"
            android:text="Level 6"
            android:textStyle="bold"
            android:textSize="18sp"
            android:onClick="startLevelSix"
            android:enabled="false"/>
    </GridLayout>



</FrameLayout>
